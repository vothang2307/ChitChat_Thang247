@page
@model ChiChat.Areas.Identity.Pages.Account.LoginModel
@{
    Layout = null;
}

<style>
    body {
        background: url('/images/34.jpg') no-repeat center center fixed;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
        font-family: 'Open Sans', sans-serif;
    }

    .login-container {
        max-width: 400px;
        margin: 100px auto;
        background-color: rgba(255, 255, 255, 0.9);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    }

        .login-container h3 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 24px;
        }

    .form-group {
        position: relative;
    }

        .form-group label {
            position: absolute;
            top: -20px;
            left: 20px;
            background-color: rgba(255, 255, 255, 0.9);
            padding: 0 5px;
            font-size: 14px;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .btn-primary {
        width: 100%;
        padding: 10px;
        background-color: #e91e63;
        border: none;
        border-radius: 5px;
        color: white;
        font-size: 16px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #d81b60;
        }

    .social-login {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

        .social-login a {
            width: 48%;
            text-align: center;
            padding: 10px;
            border-radius: 5px;
            text-decoration: none;
            color: white;
            font-size: 16px;
        }

        .social-login .facebook {
            background-color: #3b5998;
        }

        .social-login .twitter {
            background-color: #1da1f2;
        }

    .remember-me {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 20px;
    }

        .remember-me label {
            margin: 0;
        }

        .remember-me a {
            font-size: 14px;
            text-decoration: none;
            color: #e91e63;
        }

    .register-link {
        text-align: center;
        margin-top: 20px;
    }

        .register-link a {
            font-size: 14px;
            text-decoration: none;
            color: #e91e63;
        }

    .separator {
        text-align: center;
        margin: 20px 0;
        font-size: 16px;
        font-weight: bold;
        color: #999;
        position: relative;
    }

        .separator::before,
        .separator::after {
            content: '';
            position: absolute;
            top: 50%;
            width: 40%;
            height: 1px;
            background-color: #999;
        }

        .separator::before {
            left: 0;
        }

        .separator::after {
            right: 0;
        }
</style>

<div class="login-container">
    <h3>Đăng nhập</h3>

    <form method="post">
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" type="password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="remember-me">
            <div>
                <input asp-for="Input.RememberMe" type="checkbox" />
                <label asp-for="Input.RememberMe">Remember me</label>
            </div>
            <a asp-page="./ForgotPassword">Forgot Password?</a>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>

    <div class="separator">or</div>

    <div class="register-link">
        <a asp-page="./Register">Đăng ký tài khoản mới</a>
    </div>
</div>
